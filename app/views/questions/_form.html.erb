<%= form_with model: question, local: true, data: {turbo: false} do |form| %>
    <%= form.hidden_field :user_id %>

  <p><%= form.label :body, "Текст вопроса" %></p>
  <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

  <p><%= form.submit "Сохранить", class: 'button button-main' %>
    или
    <%= link_to "вернуться", "/" %>
  </p>
<% end %>
